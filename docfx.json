{
	"metadata": [{
		"src": [
			{
				"files": [ "**/*.csproj" ],
				"exclude": [ "**/bin/**", "**/obj/**" ],
				"cwd": "src"
			}
		],
		"dest": "doc/api"
	}],
	"build": {
		"content": [
			{
				"files": [ "**/*.yml" ],
				"cwd": "doc/api",
				"dest": "api"
			},			
			{
				"files": ["**/*.md", "**/toc.yml", "**/*.yml","*.md","toc.yml", "restapi/**"],
				cwd: "doc"
			}
		],
		"resource": [
			{
				"files": ["images/**", "files/**"],
				cwd: "doc"
			}
		],
		"globalMetadata": {
			"_appTitle": "SUGAR",
			"_enableSearch": true
		},
		"dest": "doc/_site",
		"template": [
			"default",
			"doc/template"
		]
	}
}
