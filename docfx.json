{
  "metadata": [
    {
      "src": [
        {
          "files": [ "*.sln"],
          "exclude": [  ],
          "cwd": ""
        },
        {
          "files": [ "**/*.csproj", "PlayGen.SUGAR.Client/project.json", "PlayGen.SUGAR.WebAPI/project.json" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "cwd": "src"
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "articles/**/*.md", "articles/**/toc.yml", "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "Social Gamification Asset",
      "_enableSearch": true
    },
    "dest": "_site"
  }
}