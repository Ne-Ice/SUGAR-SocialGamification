{
	"metadata": [{
		"src": [
			{
				"files": [
					"*.sln"
				],
				"exclude": [],
				"cwd": ""
			}, 
			{
				"files": [
					"**/*.csproj", 
					"**/project.json"
				],
				"exclude": [
					"**/bin/**", 
					"**/obj/**"
				],
				"cwd": "src"
			}
		],
		"dest": "doc/api"
	}],
	"build": {
		"content": [
			{
				"files": [ "**/*.yml" ],
				"cwd": "doc/api",
				"dest": "api"
			},			
			{
				"files": [
					"**/*.md", 
					"**/toc.yml", 
					"**/*.yml",
					"*.md", 
					"toc.yml"
				],
				cwd: "doc"
			}
		],
		"resource": [
			{
				"files": [
					"images/**"
				],
				cwd: "doc"
			}
		],
		"globalMetadata": {
			"_appTitle": "SUGAR",
			"_enableSearch": true
		},
		"dest": "doc/_site",
		"template": [
			"default",
			"doc/template"
		]
	}
}
